<div class="row" style="margin-top: 60px;">
 <div class="col-md-2"></div>
   <div class="col-md-6">
     <h1 class="text-center" style="margin: 20px;"><i>Crushmet</i> Applications</h1>
     <% if @registered_apps.count > 0 %>
        <table class="table table-striped table-hover" style="margin: 40px;">
           <thead style="margin: 20px;">
             <tr>
               <th>Application</th>
               <th>Application URL</th>
               <th>Actions</th>
             </tr>
           </thead>
           <tbody>
             <% @registered_apps.each do |registered_app| %>
               <tr>
                 <td><%= registered_app.name %></td>
                 <td><%= registered_app.url %></td>
                 <td>
                    <%= link_to "Edit", edit_registered_application_path(registered_app), class: 'btn btn-success btn-xs' %>
                    <%= link_to "Remove", registered_app, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to remove the app?Think long and hard!' } %>
                 </td>
               </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h5 class="text-center" style="margin: 20px;">You have not registered any apps yet ! Register your app now using the 'Register App' link.</h5>
      <% end %>
    </div>
    <div class="col-md-4">
      <div style="margin: 20px;">
       <%= link_to "Register App", new_registered_application_path, class: 'btn btn-success btn-sm' %>
      </div>
    </div>
  </div>
